{
  "name": "simple-json-patch",
  "description": "cute implementation of json-pointer and json-patch",
  "version": "0.0.1",
  "type": "commonjs",
  "sideEffects": false,
  "main": "./builds/simple-json-patch.js",
  "unpkg": "./builds/simple-json-patch.min.js",
  "module": "./builds/simple-json-patch.mjs",
  "exports": {
    ".": {
      "require": "./builds/simple-json-patch.js",
      "import": "./builds/simple-json-patch.mjs",
      "default": "./builds/simple-json-patch.js"
    },
    "./get": {
      "default": "./builds/json-pointer-get.js"
    }
  },
  "scripts": {
    "build": "rollup -c --silent",
    "watch": "amble ./scratch.js",
    "test": "node ./tests/*.test.js | tap-dancer"
  },
  "author": "Spencer Kelly <spencermountain@gmail.com>",
  "homepage": "https://github.com/spencermountain/simple-json-patch",
  "repository": {
    "type": "git",
    "url": "git://github.com/spencermountain/simple-json-patch.git"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.2",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "rollup": "2.49.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-terser": "7.0.2",
    "tap-dancer": "0.3.1",
    "tape": "5.2.2"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "eslintIgnore": [
    "builds/*.js"
  ],
  "license": "MIT"
}
